<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/iv_article"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:gravity="start"
            android:textColor="#ffffff"
            android:layout_below="@id/iv_article"
            android:fontFamily="Roboto"
            android:textSize="17sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/tv_from"
            android:layout_below="@id/tv_title"
            android:textSize="15sp"
            android:textStyle="italic"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_date_published"
            android:layout_toRightOf="@id/tv_from"
            android:layout_toEndOf="@id/tv_from"
            android:layout_below="@id/tv_title"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/clock_3_24"
            android:drawableStart="@drawable/clock_3_24"
            android:drawablePadding="6dp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>